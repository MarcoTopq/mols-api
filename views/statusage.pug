extends layout

block content
  h1 Status Age
  table
    tr
      th Name
      th Status Age
      th Edit
    each all, i in mangas
      tr
        td= all.name
        td= all.statusage
          td
            form(action='/mangas/statusage/'+all.id method='POST')
              div
                label(for = "statusage") R18:
                input(type='radio' name = "statusage" value = "r18")
              br
              div
                label(for = "statusage") Non R18:
                input(type='radio' name = "statusage" value = "non-r18")
              br
              button(type = "submit") Submit